<script type="text/javascript">
    var organizeId = request('organizeId');
    //归属地
    $(".city .left li").click(function () {
        $(this).siblings().removeClass("cur");
        $(this).addClass("cur");
        $(".city .right li[data-provinceid='" + $(this).data("provinceid") + "']").show();
        $(".city .right li[data-provinceid!='" + $(this).data("provinceid") + "']").hide();
        $(".city .right li[data-cityid='0']").show();
    })
    $(".city .right li").click(function () {
        city = $(this).data("cityid");
        if (city == '0') {
            city = $(".city .left .cur").data("provinceid");
        }
        //do search
        location.href = "List?organizeId=" + organizeId + "&city=" + city;
    })

    $(".goback").click(function () {
        location.href = "Index?organizeId=" + organizeId;
    })

    $(document).ready(function () {
        $(".list2").height($(window).height() - $(".tag").height() - 35 - 35 - 40);
        $(".city .left li:first-child").click();
    })

</script>
